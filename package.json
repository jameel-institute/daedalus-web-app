{
  "name": "daedalus-web-app",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "dev:init": "npm install && npm run db:dev:migrate && npm run dev",
    "db:dev:migrate": "prisma migrate dev",
    "generate": "nuxt generate",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "test:integration": "vitest ./tests/integration/",
    "test:unit": "vitest ./tests/unit/",
    "test:unit:coverage": "vitest ./tests/unit --coverage",
    "test:ssr": "vitest ./tests/ssr/*.spec.ts",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "@amcharts/amcharts5": "^5.10.3",
    "@amcharts/amcharts5-geodata": "^5.1.4",
    "@coreui/coreui": "^5.1.2",
    "@coreui/icons": "^3.0.1",
    "@coreui/icons-vue": "^2.1.0",
    "@coreui/vue": "^5.2.0",
    "@nuxt/eslint": "^0.5.3",
    "@nuxt/test-utils": "^3.14.0",
    "@nuxtjs/fontaine": "^0.4.3",
    "@pinia/nuxt": "^0.5.4",
    "@prisma/client": "^5.19.0",
    "@socket.io/admin-ui": "^0.5.1",
    "lodash.throttle": "^4.1.1",
    "nuxt": "^3.13.0",
    "pinia": "^2.2.2",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5",
    "vue": "latest"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.8",
    "utf-8-validate": "^6.0.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "2.21.0",
    "@mockoon/cli": "^8.4.0",
    "@playwright/test": "^1.46.1",
    "@testing-library/vue": "^8.1.0",
    "@types/lodash.throttle": "^4.1.9",
    "@types/node": "^20.16.1",
    "@vitest/coverage-v8": "^2.0.4",
    "@vue/test-utils": "^2.4.6",
    "jsdom": "^24.1.3",
    "lint-staged": "^15.2.9",
    "playwright": "^1.45.2",
    "prisma": "5.19.0",
    "sass": "^1.77.8",
    "simple-git-hooks": "^2.11.1",
    "vitest": "^2.0.4"
  },
  "overrides": {
    "vue": "latest"
  },
  "_comment": {
    "0": "JSON doesn't support comments so I'm adding mine here.",
    "1": "==============================",
    "2": "Vue version is overridden because of the issue described in the 'tip' in",
    "3": "the installation section of https://pinia.vuejs.org/ssr/nuxt.html"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix",
    "*/schema.prisma": "prisma format"
  }
}
